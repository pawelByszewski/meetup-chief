<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.events.EventsListActivity">

    <pl.mobilewarsaw.meetupchief.ui.searchView.SearchView
        android:id="@+id/floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:floatingSearch_searchBarMarginLeft="@dimen/default_padding"
        app:floatingSearch_searchBarMarginTop="@dimen/default_padding"
        app:floatingSearch_searchBarMarginRight="@dimen/default_padding"
        app:floatingSearch_searchHint="Meetup name..."
        app:floatingSearch_showSearchKey="true"
        app:floatingSearch_dismissOnOutsideTouch="true"
        app:floatingSearch_leftActionMode="showSearch"/>

</RelativeLayout>
