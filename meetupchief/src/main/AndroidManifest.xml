<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.mobilewarsaw.meetupchief" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".config.ChiefApplication">
        <activity android:name=".ui.groups.MeetupGroupsActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.events.EventsListingActivity"
            android:parentActivityName=".ui.groups.MeetupGroupsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.groups.MeetupGroupsActivity" />
        </activity>


        <service android:name=".service.MeetupSynchronizer"/>

        <provider android:name=".resource.local.meetup.MeetupContentProvider"
            android:authorities="pl.mobilewarsaw.meetupchief">
        </provider>
    </application>

</manifest>
